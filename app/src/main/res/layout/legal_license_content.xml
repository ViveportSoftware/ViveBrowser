<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:id="@+id/termsServiceTitleContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="fill"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/imageContainer"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="10dp">

            <ImageView
                android:id="@+id/icon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:scaleType="fitCenter"
                android:src="@drawable/ff_logo" />
        </FrameLayout>
        <TextView
            android:id="@+id/legalLicenseTitle"
            style="@style/policyTitle"
            android:text="@string/legal_license_title" />

        <TextView
            android:id="@+id/legalLicenseSection1"
            style="@style/policyBody"
            android:text="@string/legal_license_section_1" />

        <TextView
            android:id="@+id/legalLicenseSubtitle2"
            style="@style/policySubtitle"
            android:text="@string/legal_license_subtitle_2" />

        <com.igalia.wolvic.ui.views.LinkTextView
            android:id="@+id/legalLicenseSection2"
            style="@style/policyBody"
            android:text="@string/legal_license_section_2" />
    </LinearLayout>

</layout>
